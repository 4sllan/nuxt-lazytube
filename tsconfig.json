{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "vue"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}